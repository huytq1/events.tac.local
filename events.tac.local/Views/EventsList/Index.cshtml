@model EventsList
@using TAC.Utils.Helpers;
@using events.tac.local.Models;

<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var ev in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@ev.Url">@ev.EventImage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@ev.Url">@ev.Name</a>
                    </h3>
                    <div class="description">
                        <p>@ev.ContentIntro</p>
                    </div>
                </div>
                <div class="metadata well">@ev.EventStartDate</div>
            </li>
        }        
    </ol>
</div>
@Html.Pager(Model.PageSize,Model.TotalResultCount)